{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2015",
    "outDir": "dist/esm",
    "rootDir": "./src",
    "moduleResolution":"Node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react"    ,
    "lib": ["ES5","ES2015","ES2016","DOM","ESNext"],
    "typeRoots": ["./src"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["src/**/*.ts","src/**/*.tsx"],
  
}
